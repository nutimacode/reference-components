{%- comment -%}
  Renders the list of CSS token variables

  Usage:
  {% render 'css-variables' %}
{%- endcomment -%}

{%- style -%}
  :root {

    /* Layout */
    --page-width: 1500px;
    --page-width-padding: var(--size-10);

    /* Typography */
    --heading-font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    --heading-font-weight: {{ settings.heading_font.weight }};
    --heading-font-style: {{ settings.heading_font.style }};
    --body-font-family: {{ settings.body_font.family }}, {{ settings.body_font.fallback_families }};
    --body-font-weight: {{ settings.body_font.weight }};
    --body-font-style: {{ settings.body_font.style }};

    --text-h1: 4rem;    /* 40px */
    --text-h2: 3.6rem;  /* 36px */
    --text-h3: 3.2rem;  /* 32px */
    --text-h4: 2.8rem;  /* 28px */
    --text-h5: 2.4rem;  /* 24px */
    --text-h6: 2.2rem;  /* 22px */
    --text-h7: 2rem;    /* 20px */
    --text-h8: 1.8rem;  /* 18px */
    --text-h9: 1.6rem;  /* 16px */
    --text-h10: 1.4rem; /* 14px */
    --text-h11: 1.3rem; /* 13px */
    --text-h12: 1.2rem; /* 12px */

    /* Border radiuses */
    --radius-xs: 0.25rem;
    --radius-sm: 0.5rem;
    --radius-md: 0.75rem;
    --radius-lg: 1rem;
    --radius-xl: 1.5rem;
    --radius-2xl: 2rem;
    --radius-rounded: 9999px;
    --radius-none: 0;

    /* Spacing */

    --spacing-0: 0rem;    /* 0px */
    --spacing-1: 0.4rem;  /* 4px */
    --spacing-2: 0.8rem;  /* 8px */
    --spacing-3: 1rem;  /* 8px */
    --spacing-4: 1.2rem;  /* 12px */
    --spacing-5: 1.6rem;  /* 16px */
    --spacing-6: 2rem;    /* 20px */
    --spacing-7: 2.4rem;  /* 24px */
    --spacing-8: 2.8rem;  /* 28px */
    --spacing-9: 3.2rem;  /* 32px */
    --spacing-10: 3.6rem;  /* 36px */
    --spacing-11: 4rem;   /* 40px */
    --spacing-12: 4.4rem; /* 44px */
    --spacing-13: 4.8rem; /* 48px */
    --spacing-14: 5.2rem; /* 52px */
    --spacing-15: 5.6rem; /* 56px */
    --spacing-16: 6rem;   /* 60px */
    --spacing-17: 6.4rem; /* 64px */

    /* Color schemes */
    --color-scheme-1-bg: {{ settings.color_scheme_1_bg.rgb }};
    --color-scheme-1-text: {{ settings.color_scheme_1_text.rgb }};
    --color-scheme-2-bg: {{ settings.color_scheme_2_bg.rgb }};
    --color-scheme-2-text: {{ settings.color_scheme_2_text.rgb }};
    --color-scheme-3-bg: {{ settings.color_scheme_3_bg.rgb }};
    --color-scheme-3-text: {{ settings.color_scheme_3_text.rgb }};

    /* Colors */
    --color-black: #000000;
    --color-white: #ffffff;
    --color-gray-1: #808080; 
    --color-gray-2: #eeeeee;
    --color-gray-3: #A5A5A5;
    --color-green-1: #35B529;
    --color-orange-1: #FF7F22;
    --color-red-1: #FF3535;
  }

  @media screen and (max-width: 768px) {
    :root {
      --page-width-padding: var(--size-5);
    }
  }
{%- endstyle -%}

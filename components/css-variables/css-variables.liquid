{%- comment -%}
  Renders the list of CSS token variables

  Usage:
  {% render 'css-variables' %}
{%- endcomment -%}

{%- style -%}
  :root {
    --size-0-5: 0.125rem; /* 2px */
    --size-1: 0.25rem; /* 4px */
    --size-1-5: 0.375rem; /* 6px */
    --size-2: 0.5rem; /* 8px */
    --size-2-5: 0.625rem; /* 10px */
    --size-3: 0.75rem; /* 12px */
    --size-3-5: 0.875rem; /* 14px */
    --size-4: 1rem; /* 16px */
    --size-4-5: 1.125rem; /* 18px */
    --size-5: 1.25rem; /* 20px */
    --size-5-5: 1.375rem; /* 22px */
    --size-6: 1.5rem; /* 24px */
    --size-6-5: 1.625rem; /* 26px */
    --size-7: 1.75rem; /* 28px */
    --size-7-5: 1.875rem; /* 30px */
    --size-8: 2rem; /* 32px */
    --size-8-5: 2.125rem; /* 34px */
    --size-9: 2.25rem; /* 36px */
    --size-9-5: 2.375rem; /* 38px */
    --size-10: 2.5rem; /* 40px */
    --size-11: 2.75rem; /* 44px */
    --size-12: 3rem; /* 48px */
    --size-14: 3.5rem; /* 56px */
    --size-16: 4rem; /* 64px */
    --size-18: 4.5rem; /* 72px */
    --size-20: 5rem; /* 80px */
    --size-24: 6rem; /* 96px */
    --size-28: 7rem; /* 112px */
    --size-32: 8rem; /* 128px */

    /* Layout */
    --page-width: 1500px;
    --page-width-padding: var(--size-10);

    /* Typography */
    --heading-font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    --heading-font-weight: {{ settings.heading_font.weight }};
    --heading-font-style: {{ settings.heading_font.style }};
    --body-font-family: {{ settings.body_font.family }}, {{ settings.body_font.fallback_families }};
    --body-font-weight: {{ settings.body_font.weight }};
    --body-font-style: {{ settings.body_font.style }};

    --text-h1: 4rem;    /* 40px */
    --text-h2: 3.6rem;  /* 36px */
    --text-h3: 3.2rem;  /* 32px */
    --text-h4: 2.8rem;  /* 28px */
    --text-h5: 2.4rem;  /* 24px */
    --text-h6: 2.2rem;  /* 22px */
    --text-h7: 2rem;    /* 20px */
    --text-h8: 1.8rem;  /* 18px */
    --text-h9: 1.6rem;  /* 16px */
    --text-h10: 1.4rem; /* 14px */
    --text-h11: 1.3rem; /* 13px */
    --text-h12: 1.2rem; /* 12px */

    /* Border radiuses */
    --radius-xs: 0.25rem;
    --radius-sm: 0.5rem;
    --radius-md: 0.75rem;
    --radius-lg: 1rem;
    --radius-xl: 1.5rem;
    --radius-2xl: 2rem;
    --radius-rounded: 9999px;
    --radius-none: 0;

    /* Spacing */

    --spacing-0: 0rem;    /* 0px */
    --spacing-1: 0.4rem;  /* 4px */
    --spacing-2: 0.8rem;  /* 8px */
    --spacing-3: 1.2rem;  /* 12px */
    --spacing-4: 1.6rem;  /* 16px */
    --spacing-5: 2rem;    /* 20px */
    --spacing-6: 2.4rem;  /* 24px */
    --spacing-7: 2.8rem;  /* 28px */
    --spacing-8: 3.2rem;  /* 32px */
    --spacing-9: 3.6rem;  /* 36px */
    --spacing-10: 4rem;   /* 40px */
    --spacing-11: 4.4rem; /* 44px */
    --spacing-12: 4.8rem; /* 48px */
    --spacing-13: 5.2rem; /* 52px */
    --spacing-14: 5.6rem; /* 56px */
    --spacing-15: 6rem;   /* 60px */
    --spacing-16: 6.4rem; /* 64px */

    /* Color schemes */
    --color-scheme-1-bg: {{ settings.color_scheme_1_bg.rgb }};
    --color-scheme-1-text: {{ settings.color_scheme_1_text.rgb }};
    --color-scheme-2-bg: {{ settings.color_scheme_2_bg.rgb }};
    --color-scheme-2-text: {{ settings.color_scheme_2_text.rgb }};
    --color-scheme-3-bg: {{ settings.color_scheme_3_bg.rgb }};
    --color-scheme-3-text: {{ settings.color_scheme_3_text.rgb }};

    /* Colors */
    --color-black: #000000;
    --color-white: #ffffff;
    --color-gray-1: #808080; 
    --color-gray-2: #eeeeee;
    --color-gray-3: #A5A5A5;
    --color-green-1: #35B529;
    --color-orange-1: #FF7F22;
    --color-red-1: #FF3535;
  }

  @media screen and (max-width: 768px) {
    :root {
      --page-width-padding: var(--size-5);
    }
  }
{%- endstyle -%}

{% comment %}
  slideshow-slide component

  Accepts:
  - block {string} - Slideshow block

  Usage:
  {%- render 'slideshow-slide' -%}
{% endcomment %}

{% liquid 
  if section.index0 < 2
    assign preload = true
  endif
%}

<swiper-slide>
  {% render 'block-image' image: block.settings.image, media_crop: block.settings.media_crop, preload: preload %}
</swiper-slide>


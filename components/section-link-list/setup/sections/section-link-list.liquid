{%- liquid
  capture links
    for block in section.blocks
      render 'linklist-link', block: block
    endfor
  endcapture

  render 'section-link-list' slot: links
-%}

{% schema %}
{
  "name": "Link list",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "page-width",
          "label": "Container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ],
      "default": "full-width"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Link text",
          "default": "Collection"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Link list"
    }
  ]
}
{% endschema %}

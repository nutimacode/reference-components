{%- liquid
  render 'section-banner'
-%}

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "page-width",
          "label": "Container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ],
      "default": "full-width"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "media_crop",
      "label": "Media crop",
      "options": [
        {
          "value": "original",
          "label": "Original"
        },
        {
          "value": "16-9",
          "label": "16:9"
        },
        {
          "value": "4-1",
          "label": "4:1"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "original"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}

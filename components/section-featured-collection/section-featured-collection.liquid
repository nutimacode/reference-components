{% comment %}
  section-featured-collection component

  Accepts:
  - slot {string} - Products to display

  Usage:
  {%- render 'section-featured-collection', slot: products -%}
{% endcomment %}

<div class="featured-collection" id="{{ section.id }}">
  <div class="featured-collection__title">
    {% render 'section-title' %}
  </div>
  <div class="featured-collection__swiper">
    <swiper-container
      navigation="true"
      slides-per-view="4"
      space-between="20"
      navigation-prev-el="#{{ section.id }} .swiper-prev"
      navigation-next-el="#{{ section.id }} .swiper-next"
    >
      {{ slot }}
    </swiper-container>
    
    <div class="featured-collection__navigation swiper-navigation">
      <button class="swiper-prev">
        {% render 'icon' name: "arrow-left", hydration: "on:idle" %}
      </button>
      <button class="swiper-next">
        {% render 'icon' name: "arrow-right", hydration: "on:idle" %}
      </button>
    </div>
  </div>
</div>

<script type="module">
  import "components/section-featured-collection";
</script>
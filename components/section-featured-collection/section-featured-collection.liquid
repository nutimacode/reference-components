{% comment %}
  section-featured-collection component

  Accepts:
  - slot {string} - Products to display

  Usage:
  {%- render 'section-featured-collection', slot: products -%}
{% endcomment %}

<div class="featured-collection" id="{{ section.id }}">
  <div class="featured-collection__title">
    {% render 'section-title' title: section.settings.title, link: section.settings.link, link_text: section.settings.link_text %}
  </div>
  {% if section.settings.show_tabs %}
    <div class="featured-collection__tabs">
      <div class="button active">TEKNOLOJİ</div>
      <div class="button">KÜPE</div>
      <div class="button">ETEK</div>
      <div class="button">SNEAKER</div>
      <div class="button">T-SHIRT</div>
      <div class="button">TERLİK</div>
      <div class="button">YILBAŞI KOLEKSİYON</div>
      <div class="button">GÜNEŞ GÖZLÜĞÜ</div>
      <div class="button">SWEATSHIRT</div>
      <div class="button">TEKNOLOJİ</div>
      <div class="button">TEKNOLOJİ</div>
      <div class="button">TEKNOLOJİ</div>
      <div class="button">TEKNOLOJİ</div>
      <div class="button">TEKNOLOJİ</div>
      <div class="button">TEKNOLOJİ</div>
    </div>
  {% endif %}
  <div class="featured-collection__swiper">
    <swiper-container
      navigation="true"
      slides-per-view="4"
      space-between="20"
      navigation-prev-el="#{{ section.id }} .swiper-prev"
      navigation-next-el="#{{ section.id }} .swiper-next"
    >
      {{ slot }}
    </swiper-container>
    
    <div class="featured-collection__navigation swiper-navigation">
      <button class="swiper-prev">
        {% render 'icon' name: "arrow-left", hydration: "on:idle" %}
      </button>
      <button class="swiper-next">
        {% render 'icon' name: "arrow-right", hydration: "on:idle" %}
      </button>
    </div>
  </div>
</div>

<script type="module">
  import "components/section-featured-collection";
</script>